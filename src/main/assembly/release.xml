<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
    <files>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/README.md</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/LICENSE.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.basedir}/NOTICE.txt</source>
        </file>
    </files>
	<fileSets>
		<fileSet>
            <outputDirectory>/lib</outputDirectory>
			<directory>${project.build.directory}/lib/compile</directory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>${project.build.finalName}.jar</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>${project.build.directory}/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
		<fileSet>
			<directory>${project.basedir}/../zookeeper-lite/zkcore/src/main/resources</directory>
			<outputDirectory>/etc</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
